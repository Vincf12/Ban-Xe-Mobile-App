<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header với nút back -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Quay lại"
                android:scaleType="centerInside"
                android:padding="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chi tiết hợp đồng"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:gravity="center"
                android:layout_marginEnd="48dp" />
        </LinearLayout>

        <!-- Card thông tin xe -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_car"
                        android:tint="@color/primary_color"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin xe"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/primary_text" />
                </LinearLayout>

                <!-- Tên xe -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Tên xe:"
                        android:textSize="16sp"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:id="@+id/carNameTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Honda Civic 2023"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text" />
                </LinearLayout>

                <!-- Giá xe -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Giá xe:"
                        android:textSize="16sp"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:id="@+id/carPriceTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="850,000,000 VNĐ"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/price_color" />
                </LinearLayout>

                <!-- Bảo hành -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Bảo Hành:"
                        android:textSize="16sp"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:id="@+id/BHTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="7 Năm"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/price_color" />
                </LinearLayout>

                <!-- Giá cọc -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/highlight_background"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Giá cọc:"
                        android:textSize="16sp"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:id="@+id/depositTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="50,000,000 VNĐ"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_color" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card thông tin người dùng -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person"
                        android:tint="@color/primary_color"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin người mua"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/primary_text" />
                </LinearLayout>

                <!-- Tên -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Họ tên:"
                        android:textSize="16sp"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:id="@+id/userNameTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nguyễn Văn A"
                        android:textSize="16sp"
                        android:textColor="@color/primary_text" />
                </LinearLayout>

                <!-- CCCD -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="CCCD:"
                        android:textSize="16sp"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:id="@+id/CCCDTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="012345678911"
                        android:textSize="16sp"
                        android:textColor="@color/primary_text" />
                </LinearLayout>

                <!-- Số điện thoại -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại:"
                        android:textSize="16sp"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:id="@+id/userPhoneTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0123456789"
                        android:textSize="16sp"
                        android:textColor="@color/primary_text" />
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Email:"
                        android:textSize="16sp"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:id="@+id/userEmailTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="user@example.com"
                        android:textSize="16sp"
                        android:textColor="@color/primary_text" />
                </LinearLayout>

                <!-- Địa chỉ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ:"
                        android:textSize="16sp"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:id="@+id/userAddressTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="123 Đường ABC, Quận 1, TP.HCM"
                        android:textSize="16sp"
                        android:textColor="@color/primary_text" />
                </LinearLayout>

                <!-- Tuổi và Giới tính -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Tuổi:"
                            android:textSize="16sp"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/userAgeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28"
                            android:textSize="16sp"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Giới tính:"
                            android:textSize="16sp"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/userGenderTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nam"
                            android:textSize="16sp"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Button đặt cọc -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPayDeposit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Xác nhận đặt cọc"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/primary_color"
            app:cornerRadius="28dp"
            app:elevation="8dp"
            app:icon="@drawable/ic_payment"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Ghi chú -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Sau khi đặt cọc, bạn sẽ nhận được xác nhận qua email và SMS"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>