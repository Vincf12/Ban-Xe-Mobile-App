<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@color/background_color">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quay lại"
        android:layout_gravity="start"
        android:backgroundTint="@color/primary_color"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/qrImage"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:contentDescription="QR Banking"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:text="Số tiền cọc"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDeposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50,000,000 VNĐ"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/accent_color"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:text="Nội dung chuyển khoản"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CARSALE-123456"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnPaid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tôi đã thanh toán"
        android:backgroundTint="@color/primary_color"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

</LinearLayout> 