<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Simple Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xác nhận đặt cọc"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPendingBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 chờ xử lý"
            android:background="@drawable/badge_background"
            android:textColor="@color/primary_color"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

    <!-- Simple Filter Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tabAll"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Tất cả"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:background="@drawable/tab_selected"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tabPending"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Chờ xử lý"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/secondary_text_color"
            android:background="@drawable/tab_unselected"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tabCompleted"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Hoàn thành"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/secondary_text_color"
            android:background="@drawable/tab_unselected"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Car Deposit List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/layoutPayments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Các item xe đặt cọc sẽ được add động vào đây -->
        </LinearLayout>

    </ScrollView>

    <!-- Empty State (ẩn khi có dữ liệu) -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_empty_car"
            android:contentDescription="Không có xe đặt cọc"
            android:tint="@color/secondary_text_color"
            android:alpha="0.6"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có xe đặt cọc nào"
            android:textSize="18sp"
            android:textColor="@color/secondary_text_color"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách xe đặt cọc sẽ hiển thị tại đây"
            android:textSize="14sp"
            android:textColor="@color/secondary_text_color"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>