<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background_car"
    >

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Location Text -->
        <Spinner
            android:id="@+id/spinner_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:popupBackground="@android:color/white"
            android:textAlignment="viewStart"/>
        <!-- App Logo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đào Lửa Auto"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Notification Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notification"
                />
        </LinearLayout>
    </LinearLayout>
    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_bg"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_search"
            android:hint="Tìm kiếm xe mới nhất"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColorHint="@color/default_color" />
    </LinearLayout>
    <!-- Promotion Banner -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="10dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/bannerViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToOutline="true"/>

        <!-- Indicator Dots -->
        <LinearLayout
            android:id="@+id/indicator_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:backgroundTint="@color/transparent"
            android:background="@drawable/rounded_bg"
            android:padding="8dp">

            <ImageView
                android:id="@+id/dot_1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/circle_shape"
                android:backgroundTint="@android:color/white" />

            <ImageView
                android:id="@+id/dot_2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/circle_shape"
                android:backgroundTint="@android:color/white"
                android:alpha="0.5" />

            <ImageView
                android:id="@+id/dot_3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/circle_shape"
                android:backgroundTint="@android:color/white"
                android:alpha="0.5" />

            <ImageView
                android:id="@+id/dot_4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/circle_shape"
                android:backgroundTint="@android:color/white"
                android:alpha="0.5" />

        </LinearLayout>

    </FrameLayout>

    <!-- Brands Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thương hiệu phổ biến"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold" />
    <!-- Brand Icons Section -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/brands_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:overScrollMode="never"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <!-- Featured Section Header -->
    <LinearLayout
        android:id="@+id/brands_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xe phổ biến"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem tất cả"
            android:textColor="#009688"
            android:textStyle="bold"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Vehicle Listings -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listings_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>