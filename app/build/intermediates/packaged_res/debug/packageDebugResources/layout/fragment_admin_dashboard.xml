<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section - Compact hơn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_background"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📊 Thống kê đặt cọc xe"
                android:textColor="@color/primary_text_color"
                android:textSize="24sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Báo cáo chi tiết về tình hình đặt cọc"
                android:textColor="@color/secondary_text_color"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <!-- Chart Section 1: Monthly Deposits - Tăng kích thước -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Số lượng đặt cọc theo tháng"
                        android:textColor="@color/primary_text_color"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_bar_chart"
                        android:contentDescription="Bar chart icon" />

                </LinearLayout>

                <!-- Tăng chiều cao biểu đồ từ 350dp lên 420dp -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChartDepositByMonth"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    android:layout_marginTop="8dp"
                    tools:ignore="MissingClass" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Chart Section 2: Brand Distribution - Tăng kích thước -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tỷ lệ đặt cọc theo hãng xe"
                        android:textColor="@color/primary_text_color"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_pie_chart"
                        android:contentDescription="Pie chart icon" />

                </LinearLayout>

                <!-- Tăng chiều cao biểu đồ từ 260dp lên 320dp -->
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChartDepositByMake"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Chart Section 3: Revenue Trend - Tăng kích thước -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Doanh thu đặt cọc theo tháng"
                        android:textColor="@color/primary_text_color"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_line_chart"
                        android:contentDescription="Line chart icon" />

                </LinearLayout>

                <!-- Tăng chiều cao biểu đồ từ 350dp lên 420dp -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartRevenueByMonth"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    android:layout_marginTop="8dp"
                    tools:ignore="MissingClass" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Summary Stats Section - Tối ưu hiển thị -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📈 Tóm tắt thống kê"
                    android:textColor="@color/primary_text_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Thay đổi layout horizontal để hiển thị số liệu lớn hơn -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Tổng đặt cọc -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="@drawable/summary_item_background"
                        android:layout_marginBottom="12dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalDeposits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/accent_color"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng số lượng đặt cọc"
                            android:textColor="@color/secondary_text_color"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Tổng doanh thu -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="@drawable/summary_item_background"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalRevenue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 VNĐ"
                            android:textColor="@color/accent_color"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng doanh thu đặt cọc"
                            android:textColor="@color/secondary_text_color"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>